#import <Foundation/Foundation.h>

/*!
 * @brief 通用辅助扩展类
 * @author huangyibiao
 */
@interface NSObject (Common)

/*!
 * @brief 把角度转换成弧度值
 * @param degree 角度
 * @return 返回对应的弧度值
 */
+ (CGFloat)degreesToRadian:(CGFloat)degree;

/*!
 * @brief 把弧度转换成角度值
 * @param radian 弧度
 * @return 返回对应的角度值
 */
+ (CGFloat)randianToDegrees:(CGFloat)radian;

@end
